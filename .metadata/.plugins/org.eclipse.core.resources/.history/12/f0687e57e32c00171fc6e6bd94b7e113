<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC
  "-//APACHE//DTD LOG4J 1.2//EN" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
  <log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">
  
  <appender name="File" class="org.apache.log4j.FileAppender">
  
  <param name="File" value="Logs/log.log"/>
  <param name="Append" value="false"/>
  <layout class="org.apache.log4j.PatternLayout">
  <param name="ConversionPattern" value="%d{dd MMMM yyyy hh:mm:ss a} [%t]  %-5p  %c{1}- %m%n"/>  </layout>
  </appender>
  
  <appender name="File1" class="org.apache.log4j.FileAppender">
  <param name="File" value="Logs/DAO.logs"/>
 	<layout class="org.apache.PatternLayout">
 	<param name="ConversionPattern" value="%d{dd mm yy hh:mm:ss a} [%t] %-5p %c{1}-%m%n"/>
 	</layout> 
  </appender>
  
  <appender name="Console" class="org.apache.log4j.ConsoleAppender">	
  <layout class="org.apache.log4j.PatternLayout">
  <param name="ConversionPattern" value="%d{dd MMMM yyyy} [%t]  %-5p  %c{1}- %m%n"/>  </layout>
  </appender>
  <logger name="com.practice.dao.EmployeeDaoImpl">
  <level value="ALL"></level>
  <appender-ref ref="File1"/>
  </logger>
  <root>
  <priority value="INFO"></priority>
  <appender-ref ref="File"/>
  <appender-ref ref="Console"/>
  </root>
  
  </log4j:configuration>