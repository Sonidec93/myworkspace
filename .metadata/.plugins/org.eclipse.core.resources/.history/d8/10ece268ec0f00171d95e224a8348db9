package com.connect.mysql;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class DBConnect {
	
public DBConnect() {

	Connection con;
	Statement st;	 
	
	try {
		Class.forName("com.mysql.jdbc.Driver");
		
		con=DriverManager.getConnection("jdbc:mysql://localhost:8080/persons","root","");
		
		st=con.createStatement();
		ResultSet rs=st.executeQuery("select * from employee");
		
		while(rs.next()){
			int employeeId=rs.getInt(0);
			String employeeName=rs.getString(1);
			int age=rs.getInt(2);
			System.out.println("Employee ID: "+employeeId+" name is: "+employeeName+"and age "+age); 
			
			
		}
	
		
	} catch (ClassNotFoundException | SQLException e ) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	
}


public static void main(String [] args)
{
	
	DBConnect obj=new DBConnect();
	
	
}

}
